{
  "name": "Volunteer",
  "type": "object",
  "properties": {
    "full_name": {
      "type": "string",
      "description": "Full name of the volunteer"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "phone": {
      "type": "string",
      "description": "Phone number"
    },
    "location": {
      "type": "string",
      "description": "Current location/city"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "medical",
          "first_aid",
          "search_rescue",
          "logistics",
          "communication",
          "counseling",
          "construction",
          "cooking",
          "childcare",
          "translation",
          "driving",
          "tech_support"
        ]
      },
      "description": "Skills and capabilities"
    },
    "availability": {
      "type": "string",
      "enum": [
        "available",
        "busy",
        "on_assignment",
        "unavailable"
      ],
      "default": "available",
      "description": "Current availability"
    },
    "experience_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "experienced",
        "expert"
      ],
      "default": "beginner",
      "description": "Experience level in emergency response"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Languages spoken"
    },
    "transportation": {
      "type": "boolean",
      "default": false,
      "description": "Has own transportation"
    },
    "verified": {
      "type": "boolean",
      "default": false,
      "description": "Whether the volunteer is verified"
    },
    "current_assignment": {
      "type": "string",
      "description": "Current emergency assignment ID"
    }
  },
  "required": [
    "full_name",
    "email",
    "phone",
    "location",
    "skills"
  ]
}